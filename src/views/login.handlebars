<link rel="stylesheet" href="/css/loginStyle.css">

<div class="container">
    <form class="login-form" action="/api/sessions/login" method="POST">
        <h2>Iniciar Sesión</h2>
        <div class="form-group">
            <label for="usuario">E-mail:</label>
            <input type="text" id="usuario" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="button-group">
            <button type="submit" class="btn login-btn">Iniciar Sesión</button>
        </div>
        <div class="link-group">
            <a href="/api/sessions/register" class="register-link">¿No estas regsitrado? Regístrate aquí.</a>
        </div>
    </form>
</div>

